<Window x:Class="DisplayCryptoApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisplayCryptoApi"
        xmlns:vm="clr-namespace:DisplayCryptoApi.ViewModels"
        mc:Ignorable="d"
        Title="MainView" Height="800" Width="1000">
    
    <Window.DataContext>
        <vm:MainViewModel></vm:MainViewModel>
    </Window.DataContext>
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button
                Command="{Binding SelectAllCointsCommand}"
                Background="Gold"
                Content="SelectAll"></Button>
            
        </StackPanel>

        <ListBox
            ItemsSource="{Binding Coins}"
            BorderBrush="Black"
            Grid.Column="1"
            Padding="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="300"
                        BorderBrush="Red"
                        BorderThickness="2">
                        <StackPanel
                            Margin="5">
                            <Image
                                Width="100"
                                Height="50"
                                Source="{Binding Image}"></Image>
                            <StackPanel
                                Orientation="Horizontal">
                                <Label
                                    FontSize="15"
                                    Content="Name:"></Label>
                                <TextBlock
                                    Margin="5"
                                    FontSize="15"
                                    Text="{Binding Name}"></TextBlock>
                            </StackPanel>
                            <StackPanel
                                Orientation="Horizontal">
                                <Label
                                    FontSize="15"
                                    Content="Price:"></Label>
                                <TextBlock
                                    Margin="5"
                                    FontSize="15"
                                    Text="{Binding Price}"></TextBlock>
                            </StackPanel>
                            
                        </StackPanel>
                     </Border>
                 </DataTemplate>
             </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
